@model MadeiraDeCedro.Domain.Entities.Servicos
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Criar Serviço </h2>
            </div>
        </div>
    </div>
    <div class="card-body border-bottom p-4">
        <form method="post" class="row">
            <div class="p-3">
                <div asp-validation-summary="ModelOnly"> class="text-danger"></div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Nome" class="form-control border-bottom box-shadow" />
                    <label asp-for="Nome" class="ms-2"></label>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Descrição" class="form-control border-bottom box-shadow" />
                    <label asp-for="Descrição" class="ms-2"></label>
                    <span asp-validation-for="Descrição" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Madeira" class="form-control border-bottom box-shadow" />
                    <label asp-for="Madeira" class="ms-2"></label>
                    <span asp-validation-for="Madeira" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Movel" class="form-control border-bottom box-shadow" />
                    <label asp-for="Movel" class="ms-2"></label>
                    <span asp-validation-for="Movel" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Imagem" class="form-control border-bottom box-shadow" />
                    <label asp-for="Imagem" class="ms-2"></label>
                    <span asp-validation-for="Imagem" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Criar
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
